.PHONY : uninstall
uninstall : 
uninstall :
	rm -rf $(INSTALL_DIR)/lib/WorldFoundry
	rm -rf $(INSTALL_DIR)/include/WorldFoundry

.PHONY : clean clean-lib
clean clean-lib :
